<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>

            <item
                android:left="7dp"
                android:top="7dp">

                <shape>
                    <corners android:radius="10dp" />
                    <solid android:color="#000" />
                </shape>

            </item>

            <item
                android:bottom="7dp"
                android:right="7dp">

                <shape>

                    <gradient
                        android:angle="270"
                        android:endColor="#ED87CC"
                        android:startColor="#ED87CC" />

                    <stroke android:width="1dp" android:color="#000" />

                    <corners android:radius="10dp" />

                    <padding
                        android:bottom="10dp"
                        android:right="10dp"
                        android:left="10dp"
                        android:top="10dp" />

                </shape>

            </item>

        </layer-list>
    </item>
</selector>